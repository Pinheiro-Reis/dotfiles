{
	"breadcrumbs.enabled": false,
	"debug.onTaskErrors": "debugAnyway",
	"editor.colorDecorators": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.detectIndentation": false,
	"editor.formatOnSave": true,
	"editor.fontFamily": "JetBrains Mono Nerd Font Mono",
	"editor.fontLigatures": false,
	"editor.fontSize": 14,
	"editor.fontWeight": "450",
	"editor.inlayHints.enabled": "off",
	"editor.lineHeight": 1.5,
	"editor.minimap.enabled": false,
	"editor.parameterHints.enabled": false,
	"editor.renderLineHighlight": "none",
	"editor.rulers": [80, 120],
	"editor.semanticHighlighting.enabled": false,
	"editor.scrollbar.horizontal": "hidden",
	"editor.scrollbar.vertical": "hidden",
	"editor.suggestSelection": "first",
	"editor.tabSize": 4,
	"editor.wordWrap": "on",
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"scope": "string.quoted",
				"settings": {
					"foreground": "#ffffff" // Ou use uma cor neutra
				}
			}
		]
	},
	"explorer.compactFolders": false,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.patterns": {
		"package.json": ".eslint*, eslint.config.*, prettier*, tsconfig*, vite*, pnpm-*, bun.lockb, nest*, package-lock*",
		"tailwind.config.*": "tailwind.config*, postcss.config*",
		".env": ".env*, .venv*, env*, venv*"
	},
	"emmet.includeLanguages": { "django-html": "html" },
	"files.associations": {
		"**/templates/*.html": "django-html",
		"*.yaml": "yaml"
	},
	"git.confirmSync": false,
	"git.defaultBranchName": "master",
	"git.terminalAuthentication": false,
	"github.copilot.enable": {
		"*": false,
		"plaintext": false,
		"markdown": false,
		"scminput": false
	},
	"github.gitAuthentication": true,
	"gitlens.codeLens.recentChange.enabled": false,
	"terminal.integrated.showExitAlert": false,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"security.workspace.trust.untrustedFiles": "open",
	"latex-workshop.formatting.latex": "latexindent",
	"latex-workshop.formatting.latexindent.path": "latexindent",
	"latex-workshop.formatting.latexindent.args": [
		"-c",
		"%DIR%/",
		"%TMPFILE%",
		"-y=defaultIndent: '%INDENT%'"
	],
	"liveServer.settings.donotShowInfoMsg": true,
	"liveServer.settings.CustomBrowser": "firefox",
	"notebook.defaultFormatter": "esbenp.prettier-vscode",
	"python.createEnvironment.trigger": "off",
	"prettier.useTabs": true,
	"prettier.requireConfig": false,
	"prettier.tabWidth": 4,
	"symbols.files.associations": {
		"*.module.ts": "nest",
		"*.guard.ts": "typescript",
		"*.spec.ts": "ts-test",
		"*.e2e-spec.ts": "ts-test",
		"*.mock.ts": "ts-test",
		"vitest.config.e2e.ts": "vite",
		".env.development.local": "gear",
		".env.test.local": "gear",
		".env.local": "gear",
		".env.sst": "gear",
		".env.example": "gear",
		"*.ndjson": "brackets-orange"
	},

	"terminal.integrated.defaultProfile.linux": "zsh",

	"typescript.updateImportsOnFileMove.enabled": "always",
	"typescript.suggest.autoImports": true,
	"typescript.preferences.preferTypeOnlyAutoImports": true,
	"window.confirmSaveUntitledWorkspace": false,
	"window.menuBarVisibility": "compact",
	"window.titleBarStyle": "custom",
	"workbench.activityBar.location": "hidden",
	"workbench.colorCustomizations": {
		"sideBar.foreground": "#ffffff"
	},
	"workbench.colorTheme": "Min Darker Theme (by GmsGarcia)",
	"workbench.editor.labelFormat": "short",
	"workbench.externalBrowser": "chromium",
	"workbench.settings.applyToAllProfiles": ["editor.fontFamily"],
	"workbench.startupEditor": "newUntitledFile",
	"workbench.tree.renderIndentGuides": "always",
	"workbench.statusBar.visible": false,
	"window.commandCenter": false,
	"window.zoomLevel": 1,
	"terminal.integrated.env.linux": {},
	"database-client.autoSync": true,
	"yaml.format.enable": true,
	"yaml.format.singleQuote": false,
	"yaml.format.printWidth": 80,
	"yaml.format.proseWrap": "preserve",
	"[github-actions-workflow]": {
		"editor.autoIndent": "advanced"
	},
	"[python]": {
		"editor.defaultFormatter": "ms-python.black-formatter"
	},
	"[yaml]": {
		"editor.tabSize": 2,
		"editor.insertSpaces": true,
		"editor.defaultFormatter": "redhat.vscode-yaml"
	},
	"makefile.configureOnOpen": true,
	"editor.autoClosingQuotes": "always"
}
